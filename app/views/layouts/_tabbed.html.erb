<table class='tabbed' width="98%" height="100%" cellpadding='0' cellspacing='0'>
	<tr>
		<div class='message'>
			<%- flash.each do |name, msg| -%>
      			<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    		<%- end -%>
		</div>

		<td class='main' id='main' valign='top'>
      		<%= yield %>
		</td>
	</tr>
</table>
