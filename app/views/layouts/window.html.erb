<!DOCTYPE html>
<html>
	<head>
	  <title>CobraSeguro</title>
		<%= yield :styles %>
		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<%= render 'layouts/header' %>
		<div class='winmodal'>
			<div id='container'>
				<%- flash.each do |name, msg| -%>
			  	<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
				<%- end -%>
			</div>
			<%= yield %>
		</div>
	</body>
</html>
