<div class='title_tools'>
  <a class="btn btn-large btn-warning" <%= link_to(t('debtor.new'), new_debtor_path) %> </a>
</div>

<div class='title_page'>
  <span> <%= t('debtor.title') %> </span>
</div>

<p>
  <%= form_tag(debtors_path, :method => 'get') do |f| %>
    <%= text_field_tag 'name', params[:name], :size => 80 %>
    <%= submit_tag t('debtor.search') %> ou <%= link_to t('menu.clean'), debtors_path %>
  <% end %>
</p>

<div class='list1'>
  <% @debtors.each do |debtor| %>
    <li>
      <div class='strip' id='none'> <%= debtor.id %> </div>

      <div class='tools'>
        <%= link_to(t('menu.edit'), edit_debtor_path(debtor), class: "btn btn-xs btn-default") %>
      </div>

      <div class='indent'>
        <%= link_to(debtor.name, debtor_path(debtor)) %>
        &ndash;
        <tt>
        <% if debtor.cnpj.present? %> 
          <%= debtor.cnpj %>
        <% else %>
          <%= debtor.cpf %>
        <% end %>
        </tt>
        <dt>
        </dt>
      </div>
    </li>
  <% end %>
</div>

<div id='paginate'>
  <div class="apple_pagination">
    <%= will_paginate :container => false %>
  </div>
</div>
