<div class='title_page'> <%= t('home.ticket.title') %> </div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Documento</th>
      <th>Vencimento</th>
      <th>Atraso Meses</th>
      <th>Principal</th>
      <th>Correção</th>
      <th>Juros</th>
      <th>Multa</th>
      <th>Taxa</th>
      <th>Valor Total</th>
      <th><%= t('status') %></th>
      <th>Contrato</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %> </td>
        <td><%= ticket.document_number %> </td>
        <td><%= ticket.due_at.to_s_br %> </td>
        <td><%= calc_meses_atraso(ticket, nil, nil) %> </td>
        <td><%= ticket.amount_principal.real %> </td>
        <td><%= calc_correcao(ticket, nil, nil).real %> </td>
        <td><%= calc_juros(ticket, nil, nil).real %> </td>
        <td><%= calc_multa(ticket, nil, nil).real %> </td>
        <td><%= calc_taxa(ticket, nil, nil).real %> </td>
        <td><%= calc_ticket(ticket, nil, nil).real %> </td>
        <td><%= t('ticket.status.'<<ticket.status) %> </td>
        <td><%= ticket.contract_id %> </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td> <%= session[:value_ticket].real %></td>
      <td> <%= session[:total_correcao].real %> </td>
      <td> <%= session[:total_juros].real %> </td>
      <td> <%= session[:total_multa].real %> </td>
      <td> <%= session[:total_taxa].real %> </td>
      <td> <%= session[:total_ticket].real %></td>
      <td></td>
      <td></td>
    </tr>
  </tfoot>  
</table>
