
<div class='title_page'> <%= t('home.contract.title') %> </div>
<table class="table">
  <thead>
    <tr>
      <th>Contrato</th>
      <th>Nro Original</th>
      <th>Situação</th>
      <th>Data Contrato</th>
      <th>Parcelas</th>
      <th>Valor</th>
    </tr>
  </thead>
  <tbody>
    <% if @contracts.nil? %>
      'Nenhum CONTRATO gerado.'
    <% else %>
      <% @contracts.each do |contract| %>
        <tr>
          <td><%= contract.id %> </td>
          <td><%= contract.origin_code %> </td>
          <% if contract.open? %>
            <td><%= link_to(t('contract.status.' << contract.status) << ' - Ver Contrato', contract_path(contract)) %> </td>
          <% else %>
            <td><%= t('contract.status.' << contract.status) %></td>
          <% end %>
          <td><%= contract.created_at.to_s_br %> </td>
          <td><%= contract.ticket_quantity %> </td>
          <td><%= contract.amount_principal.real %> </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
