<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Unit</th>
      <th>Amount unit</th>
      <th>Amount client</th>
      <th>Status</th>
      <th>Debtor</th>
      <th>Client ticket quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.unit %></td>
        <td><%= contract.amount_unit %></td>
        <td><%= contract.amount_client %></td>
        <td><%= contract.status %></td>
        <td><%= contract.debtor %></td>
        <td><%= contract.client_ticket_quantity %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

