
<div class='standalone'>
	<div class='title'> <%= t("sign_in_now") %> </div>
	<div class='section'>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
		  <div class="form-inputs">
		    <%= f.input :email, :label => t('email'), required: false, autofocus: true, input_html:{:class => 'form-control'} %>
		    <%= f.input :password, :label => t('password'), required: false %>
		  </div>
	  
      <div class="form-actions">
		    <%= f.button :submit, t('log_in'), class: 'btn-primary' %>
		  </div>
      <br>
		<% end %>
	</div>

</div>
